[user]
  name = julian1
  email = julian.atkinson71@gmail.com
[push]
  default = simple

# see http://durdn.com/blog/2012/11/22/must-have-git-aliases-advanced-examples/
[alias]

  # commit/staging
  c = commit
  cm = commit -m
  a = add
  s = status -s

  f = fetch

  # git commit --amend -m doesn't work for some reason?
  am = commit --amend -m

  # push
  p = push
  po = push origin
  pom = push origin master

  # pull
  pu = pull -p
  puo = pull origin
  puom = pull origin master

  # branch stuff
  b = branch
  bd = branch -D

  # checkout stuff
  co = checkout
  cob = checkout -b
  com = checkout master

  # log stuff
  ls = log --color --graph  --abbrev-commit --decorate --abbrev-commit --decorate --pretty='%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue) <%an>%Creset'
  ll = log --color --graph  --abbrev-commit --decorate --abbrev-commit --decorate --pretty='%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue) <%an>%Creset' --numstat
  lf = log -U1 --follow
  # log with changes
  lp = log --color  -p

  # reset stuff
  r = reset
  rh = reset --hard
  rhh = reset --hard remotes/origin/HEAD
  # unstage file - deleted only
  #rc = rm --cached
  # reset will unstage ordinary staged files

  # reset to last commit - or undo last commit
  u = checkout HEAD~1
  # rl = reset --hard HEAD~1

  dc = diff --color


